srclibgen:
	${MAKE} -C ${SOFT_WORKDIR}/toolpool/t_flash_programmer/SourceDepends binlib

srcliblink:
	${MAKE} T_FP_LINK_SRC_LIB=1

FLSHPROG_INSTALL_DIR := ${SOFT_WORKDIR}/toolpool/plugins/fastpf/flash_programmers/t_ramrun

flshprog_install:
	@${ECHO} "INSTALL           ${CT_TARGET}_ramrun.lod"
	mkdir -p ${FLSHPROG_INSTALL_DIR}
	cp -f ${LODBASE}ramrun.lod ${FLSHPROG_INSTALL_DIR}/${CT_TARGET}_ramrun.lod
